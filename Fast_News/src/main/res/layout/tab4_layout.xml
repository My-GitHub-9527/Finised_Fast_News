<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="史润华/律师"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="12dp"/>
    <ImageView
        android:id="@+id/tab4_bigimg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ls"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/tab4_smallimg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/round"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab4_bigimg"
        android:text="我是律师史润华，有关互联网 + 以及其他疑难复杂案件，问我吧！"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/type"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时政"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="#D3D3D3"/>

        <TextView
            android:id="@+id/attention_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.4万关注"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="#D3D3D3"/>

        <TextView
            android:id="@+id/ask_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="510提问"/>
        <Button
            android:id="@+id/attention_btn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text=" + 关注"
            android:background="@mipmap/night_biz_photoset_list_pics_sum_bg"
            android:layout_marginLeft="120dp"
            />
    </LinearLayout>
</RelativeLayout>
    </android.support.v7.widget.CardView>